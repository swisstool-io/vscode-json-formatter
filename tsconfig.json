{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node", "mocha", "vscode"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "out",
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*.ts"]
}
